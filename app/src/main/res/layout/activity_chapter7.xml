<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".chapter7.Chapter7Activity">

    <Button
        android:id="@+id/saveFileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存文件"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restoreFileBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取文件"
        app:layout_constraintTop_toBottomOf="@id/saveFileBtn" />

    <Button
        android:id="@+id/saveSpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存SP"
        app:layout_constraintTop_toBottomOf="@id/restoreFileBtn" />

    <Button
        android:id="@+id/restoreSpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取SP"
        app:layout_constraintTop_toBottomOf="@id/saveSpBtn" />

    <Button
        android:id="@+id/createSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="create数据库"
        app:layout_constraintTop_toBottomOf="@id/restoreSpBtn" />

    <Button
        android:id="@+id/upgradeSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upgrade数据库"
        app:layout_constraintTop_toBottomOf="@id/createSQLBtn" />

    <Button
        android:id="@+id/insertSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert"
        app:layout_constraintTop_toBottomOf="@id/upgradeSQLBtn" />

    <Button
        android:id="@+id/updateSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update"
        app:layout_constraintTop_toBottomOf="@id/insertSQLBtn" />

    <Button
        android:id="@+id/deleteSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"
        app:layout_constraintTop_toBottomOf="@id/updateSQLBtn" />

    <Button
        android:id="@+id/selectSQLBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select"
        app:layout_constraintTop_toBottomOf="@id/deleteSQLBtn" />

    <Button
        android:id="@+id/transactionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="事务"
        app:layout_constraintTop_toBottomOf="@id/selectSQLBtn" />

    <Button
        android:id="@+id/upgradeBetterBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upgrade数据库【推荐】"
        app:layout_constraintTop_toBottomOf="@id/transactionBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>