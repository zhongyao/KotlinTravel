<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".chapter9.Chapter9Activity">

    <Button
        android:id="@+id/notificationBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通通知"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/notificationBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="富文本通知[setStyle]"
        app:layout_constraintTop_toBottomOf="@id/notificationBtn1" />

    <Button
        android:id="@+id/notificationBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重要通知"
        app:layout_constraintTop_toBottomOf="@id/notificationBtn2" />

    <Button
        android:id="@+id/cameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照"
        app:layout_constraintTop_toBottomOf="@id/notificationBtn3" />

    <Button
        android:id="@+id/galleryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册选图片"
        app:layout_constraintTop_toBottomOf="@id/cameraBtn" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/galleryBtn" />

    <Button
        android:id="@+id/infixBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="infix函数"
        app:layout_constraintTop_toBottomOf="@id/iv" />

</androidx.constraintlayout.widget.ConstraintLayout>